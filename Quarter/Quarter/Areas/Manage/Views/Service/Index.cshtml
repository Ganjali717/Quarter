@model List<Service>
@{
    ViewData["Title"] = "Index";
    int order = 0;
}


<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center">
        <h1>Maklerler</h1>
        <a asp-action="create" class="btn btn-primary">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Logo</th>
                <th scope="col">Description</th>
                <th scope="col">Image</th>
                <th scope="col">Actions</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var service in Model)
            {
                order++;
            <tr>
                <th scope="row">@order</th>
                <td>@service.Title</td>
                <td>@Html.Raw(service.Logo)</td>
                <td>@service.Desc</td>
                <td><img src="~/uploads/service/@service.serviceDetail.Image" style="max-width:100px" alt="Alternate Text" /></td>
                <td>
                    <a asp-action="edit" asp-route-id="@service.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="deletefetch" asp-route-id="@service.Id" class="btn btn-danger btn-item-delete">Delete</a>
                </td>
            </tr>
            }

        </tbody>
    </table>
</div>