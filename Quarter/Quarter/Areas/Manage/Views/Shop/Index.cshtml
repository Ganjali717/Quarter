@model List<House>
@{
    ViewData["Title"] = "Index";
    int order = (ViewBag.SelectedPage - 1) * 4;
}


<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center">
        <h1>Evler</h1>
        <a asp-action="create" class="btn btn-primary">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Team</th>
                <th scope="col">HouseType</th>
                <th scope="col">HouseStatus</th>
                <th scope="col">City</th>
                <th scope="col">Area</th>
                <th scope="col">Rooms</th>
                <th scope="col">Floor</th>
                <th scope="col">Sale Price</th>
                <th scope="col">Image</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var house in Model)
            {
                order++;
                <tr>
                    <th scope="row">@order</th>
                    <td>@house.Team.Fullname</td>
                    <td>@house.HouseType.Name</td>
                    <td>@house.HouseStatus.StatusName</td>
                    <td>@house.City.Name</td>
                    <td>@house.Area</td>
                    <td>@house.Rooms</td>
                    <td>@house.Floor</td>
                    <td>@house.SalePrice AZN</td>
                    <td><img src="~/uploads/house/@house.HouseImages.FirstOrDefault(x => x.PosterStatus == true)?.Image" style="max-width:100px" alt="Alternate Text" /></td>
                    <td>
                        <a asp-action="edit" asp-route-id="@house.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="deletehousefetch" asp-route-id="@house.Id" class="btn btn-danger btn-item-delete">Delete</a>
                        <a asp-action="comment" asp-route-id="@house.Id" class="btn btn-success">Comments</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>




    <div class="d-flex justify-content-center">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item @(ViewBag.SelectedPage==1?"disabled":"")">
                    <a class="page-link" asp-action="index" asp-route-page="@(ViewBag.SelectedPage-1)" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                @for (int i = 1; i <= ViewBag.TotalPage; i++)
                {
                    <li class="page-item @(i==ViewBag.SelectedPage?"active":"")"><a class="page-link" asp-action="index" asp-route-page="@i">@i</a></li>
                }
                <li class="page-item @(ViewBag.SelectedPage==ViewBag.TotalPage?"disabled":"")">
                    <a class="page-link" asp-action="index" asp-route-page="@(ViewBag.SelectedPage+1)" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>



</div>
