@model List<Order>
@{
    ViewData["Title"] = "Index";
    int index = 0;
    int orderItemIndex = 0;
}


<!-- BREADCRUMB AREA START -->
<div class="ltn__breadcrumb-area text-left bg-overlay-white-30 bg-image " data-bs-bg="img/bg/14.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__breadcrumb-inner">
                    <h1 class="page-title">Cart</h1>
                    <div class="ltn__breadcrumb-list">
                        <ul>
                            <li><a asp-action="index" asp-controller="home"><span class="ltn__secondary-color"><i class="fas fa-home"></i></span> Home</a></li>
                            <li>Order</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- BREADCRUMB AREA END -->

<!-- SHOPING CART AREA START -->
<div class="liton__shoping-cart-area mb-120">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping-cart-inner">
                    <div class="shoping-cart-table table-responsive">
                        <table class="table">
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    index++;
                                    orderItemIndex = 0;
                                        <tr data-target="#demo-@index">
                                            <td class="cart-product-remove">x</td>
                                            <td class="cart-product-image">
                                                <a href="product-details.html"><img src="~/uploads/house/@item.OrderItems.FirstOrDefault().House.HouseImages.FirstOrDefault(x => x.PosterStatus == true).Image" alt="#"></a>
                                            </td>
                                            <td class="cart-product-info">
                                                <h4><a href="product-details.html">@item.OrderItems.FirstOrDefault().HouseLocation</a></h4>
                                            </td>
                                            <td class="cart-product-price">@item.OrderItems.FirstOrDefault().SalePrice</td>
                                            <td class="cart-product-quantity">
                                                <div class="cart-plus-minus">
                                                    <input type="text" value="02" name="qtybutton" class="cart-plus-minus-box">
                                                </div>
                                            </td>
                                            <td>
                                                @if (item.Status == OrderStatus.Accepted)
                                                {
                                                    <h5><span class="badge badge-success">Accepted</span></h5>
                                                }
                                                else if (item.Status == OrderStatus.Rejected)
                                                {
                                                    <h5><span class="badge badge-danger">Rejected</span></h5>
                                                }
                                                else
                                                {
                                                    <h5><span class="badge badge-info">Pending</span></h5>
                                                }
                                            </td>
                                        </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- SHOPING CART AREA END -->