@model MemberLoginViewModel
@{
    ViewData["Title"] = "Register";
}



<!-- BREADCRUMB AREA START -->
<div class="ltn__breadcrumb-area text-left bg-overlay-white-30 bg-image " data-bs-bg="img/bg/14.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__breadcrumb-inner">
                    <h1 class="page-title">Akkaunt</h1>
                    <div class="ltn__breadcrumb-list">
                        <ul>
                            <li><a href="index.html"><span class="ltn__secondary-color"><i class="fas fa-home"></i></span> Ana Səhifə</a></li>
                            <li>Daxil olun </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- BREADCRUMB AREA END -->



<!-- LOGIN AREA START -->
<div class="ltn__login-area pb-65">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title-area text-center">
                    <h1 class="section-title">Akkauntunuza <br>Daxil olun</h1>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="account-login-inner">
                    <form method="post" class="ltn__form-box contact-form-box">
                        <div class="col-md-12 col-12 mb--15">
                            <label asp-for="UserName">Ad və Soyad</label>
                            <input asp-for="UserName" class="mb-0 form-control" type="text" id="UserName"
                                   placeholder="User Name daxil edin">
                            <span class="text-danger" asp-validation-for="UserName"></span>
                        </div>
                        <br />
                        <div class="col-md-12 col-12 mb--15">
                            <label asp-for="Password">Şifrə</label>
                            <input asp-for="Password" class="mb-0 form-control" type="password" id="Password"
                                   placeholder="Şifrənizi daxil edin">
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                        <br />
                        <div class="btn-wrapper mt-0">
                            <button class="theme-btn-1 btn btn-block" type="submit">DAXİL OLUN</button>
                        </div>
                        <div class="go-to-btn mt-20">
                            <a href="#"><small>ŞİFRƏNİZİ UNUTMUSUNUZ?</small></a>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="account-create text-center pt-50">
                    <h4>AKKOUNTUNUZ YOXDUR?</h4>
                    <p>
                        Yoxdursa elə bu dəyqə qeydiyyatdan keçin 
                    </p>
                    <div class="btn-wrapper">
                        <a asp-action="register" asp-controller="account" class="theme-btn-1 btn black-btn">QEYDİYYATDAN KEÇİN</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- LOGIN AREA END -->
