@model AboutViewModel


<!-- BREADCRUMB AREA START -->
<div class="ltn__breadcrumb-area text-left bg-overlay-white-30 bg-image " data-bs-bg="img/bg/14.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__breadcrumb-inner">
                    <h1 class="page-title">Bizim Haqqımızda</h1>
                    <div class="ltn__breadcrumb-list">
                        <ul>
                            <li><a asp-action="index" asp-controller="home"><span class="ltn__secondary-color"><i class="fas fa-home"></i></span> Ana səhifə</a></li>
                            <li>Haqqımızda</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- BREADCRUMB AREA END -->
<!-- ABOUT US AREA START -->
<div class="ltn__about-us-area pt-120--- pb-90 mt--30">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 align-self-center">
                <div class="about-us-img-wrap about-img-left">
                    <img src="~/assets/img/others/@Model.Settings.FirstOrDefault().AboutUsImg" alt="About Us Image">
                    <div class="about-us-img-info about-us-img-info-2 about-us-img-info-3">

                        <div class="ltn__video-img ltn__animation-pulse1">
                            <img src="~/assets/img/others/8.png" alt="video popup bg image">
                            <a class="ltn__video-icon-2 ltn__video-icon-2-border---" href="https://www.youtube.com/embed/X7R-q9rsrtU?autoplay=1&showinfo=0" data-rel="lightcase:myCollection">
                                <i class="fa fa-play"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 align-self-center">
                <div class="about-us-info-wrap">
                    <div class="section-title-area ltn__section-title-2--- mb-20">
                        <h6 class="section-subtitle section-subtitle-2 ltn__secondary-color">Haqqımızda</h6>
                        <h1 class="section-title">
                            @Model.Settings.FirstOrDefault().AboutUsTitle<span>.</span>
                        </h1>
                        <p>
                            @Model.Settings.FirstOrDefault().AboutUsDesc
                        </p>
                    </div>
                    <ul class="ltn__list-item-half clearfix">
                        @foreach (var item in Model.Abouts)
                        {
                            <li>
                                @Html.Raw(item.Icon)
                                @item.Title
                            </li>
                        }

                    </ul>
                    <div class="btn-wrapper animated">
                        <a asp-action="index" asp-controller="service" class="theme-btn-1 btn btn-effect-1">BİZİM SERVİSLƏR</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ABOUT US AREA END -->
<!-- FEATURE AREA START ( Feature - 6) -->
<div class="ltn__feature-area section-bg-1 pt-120 pb-90 mb-120---">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title-area ltn__section-title-2--- text-center">
                    <h6 class="section-subtitle section-subtitle-2 ltn__secondary-color">Bizim Servislər</h6>
                    <h1 class="section-title">Bizim Əsas Məqsədimiz</h1>
                </div>
            </div>
        </div>
        <div class="row ltn__custom-gutter--- justify-content-center">
            @foreach (var item in Model.Services)
            {
                <div class="col-lg-4 col-sm-6 col-12">
                    <div class="ltn__feature-item ltn__feature-item-6 text-center bg-white  box-shadow-1">
                        <div class="ltn__feature-icon">
                            <span>@Html.Raw(item.Logo)</span>

                        </div>
                        <div class="ltn__feature-info">
                            <h3><a asp-action="detail" asp-controller="service" asp-route-id="@item.Id">@item.Title</a></h3>
                            <p>@item.Desc</p>
                            <a class="ltn__service-btn" asp-action="detail" asp-controller="service" asp-route-id="@item.Id">Ev axtar <i class="flaticon-right-arrow"></i></a>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
<!-- FEATURE AREA END -->
<!-- TEAM AREA START (Team - 3) -->
<div class="ltn__team-area pt-115 pb-90">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title-area ltn__section-title-2--- text-center">
                    <h6 class="section-subtitle section-subtitle-2 ltn__secondary-color">Komandamız</h6>
                    <h1 class="section-title">Mütəxəssislər</h1>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            @foreach (var item in Model.Teams)
            {
                <div class="col-lg-4 col-sm-6">
                    <div class="ltn__team-item ltn__team-item-3---">
                        <div class="team-img">
                            <img src="~/uploads/team/@item.Image" alt="Image">
                        </div>
                        <div class="team-info">
                            <h4><a asp-action="detail" asp-controller="team" asp-route-id="@item.Id">@item.Fullname</a></h4>
                            <h6 class="ltn__secondary-color">Makler</h6>
                            <div class="ltn__social-media">
                                <ul>
                                    <li><a href="#">@Html.Raw(item.teamDetail.Facebook)</a></li>
                                    <li><a href="#">@Html.Raw(item.teamDetail.Twitter)</a></li>
                                    <li><a href="#">@Html.Raw(item.teamDetail.Linkedin)</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
<!-- TEAM AREA END -->
<!-- TESTIMONIAL AREA START (testimonial-7) -->
<div class="ltn__testimonial-area section-bg-1--- bg-image-top pt-115 pb-70" data-bs-bg="img/bg/20.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title-area ltn__section-title-2--- text-center">
                    <h6 class="section-subtitle section-subtitle-2 ltn__secondary-color">Verilən Qiymətlər</h6>
                    <h1 class="section-title">Müştərilərin Rəyi</h1>
                </div>
            </div>
        </div>
        <div class="row ltn__testimonial-slider-5-active slick-arrow-1">
            @foreach (var item in Model.Comments)
            {
                <div class="col-lg-4">
                    <div class="ltn__testimonial-item ltn__testimonial-item-7">
                        <div class="ltn__testimoni-info">
                            <p>
                                <i class="flaticon-left-quote-1"></i>
                                @item.Text
                            </p>
                            <div class="ltn__testimoni-info-inner">
                                <div class="ltn__testimoni-name-designation">
                                    <h5>@item.Username</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!--  -->
        </div>
    </div>
</div>
<!-- TESTIMONIAL AREA END -->
